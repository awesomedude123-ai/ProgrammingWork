		name.contains(s); //Checks to see if string is in the "name" string
		name.toUpperCase(); //UpperCase all characters
		name.toLowerCase(); //Lower cases all characters
		name.equals(anObject); //Check if the parameter string is equal to "name string"
		name.equalsIgnoreCase(anotherString);  //Check if the parameter string is equal to "name string"; does not take case into account
		name.indexOf(str);
		name.substring(beginIndex, endIndex);
		name.split(regex);
