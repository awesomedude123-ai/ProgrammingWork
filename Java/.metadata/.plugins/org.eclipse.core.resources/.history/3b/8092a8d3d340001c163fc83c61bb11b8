package Tsa;

import java.util.Scanner;

public class Runoff {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner oldScanner = new Scanner(System.in);
        int number = oldScanner.nextInt();
        double number1 = (double) number;
        String word = Integer.toHexString(number);
        if(word.contains("[a-x]")) {
        	word.toUpperCase();
        }
        System.out.println("0x"+Integer.toHexString(number));
        
	}//end main method

}//end public class
